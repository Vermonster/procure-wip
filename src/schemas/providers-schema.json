{
	"$schema": "http://json-schema.org/schema#",
	"definitions": {
		"provider": {
			"type": "object",
			"properties": {
				"name": { "type": "string" },
				"clientId": { "type": "string" },
				"org": { "type": "string" },
				"queryProfile": { "type": "string" },
				"isOpen": { "type": "boolean" },
				"scope": {
					"type": "array",
					"items": {
						"type": "string",
						"pattern": "^[-\\w]+/(\\*\\.)?[*-\\w+]+(\\.\\w+)?$" 
					}
				},
				"clientSecret": { "type": "string" },
				"id": { "type": "string" },
				"fhirEndpoint": { 
					"type": "string",
					"format": "uri"
				},
				"redirectUri": {
					"type": "string",
					"format": "uri"
				},
				"patient": { "type": "string" }
			},
			"additionalProperties": false
		}
	},
	"type": "array",
	"anyOf": [
		{ "required": ["name", "patient"] },
		{ "required": ["name", "clientId"] }
	],
	"items":  { "$ref": "#/definitions/provider" }
}